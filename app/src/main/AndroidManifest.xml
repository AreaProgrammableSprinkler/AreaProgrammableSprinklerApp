<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ensc38.areaprogrammablesprinkler" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BaseActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProgramActivity"
            android:label="@string/title_activity_program" >
        </activity>
        <activity
            android:name=".PositionAcitivity"
            android:label="@string/title_activity_position_acitivity" >
        </activity>
        <activity
            android:name=".PositionActivity"
            android:label="@string/title_activity_position" >
        </activity>
        <activity
            android:name=".RunActivity"
            android:label="@string/title_activity_run" >
        </activity>
        <activity
            android:name=".BlueActivity"
            android:label="@string/title_activity_blue" >
        </activity>
        <activity
            android:name=".RunningActivity"
            android:label="@string/title_activity_running" >
        </activity>

        <service
            android:name=".BluetoothService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
